<% form_for @user_session, :url => user_session_path, :html => {:method => :put} do |form| %>
  <%= form.label :login %>
  <%= form.text_field :login %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.check_box :remember_me %>
  <%= form.label :remember_me %>
  <%= form.submit 'Log In' %>
<% end %>
